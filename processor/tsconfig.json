{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2017",
        "outDir": "dist",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "noFallthroughCasesInSwitch": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src"
    ]
}
